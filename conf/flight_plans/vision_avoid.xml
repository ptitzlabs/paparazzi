<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<!-- If the origin of the fligth plan is not correct, change the lat0 en lon0 coordinates -->
<flight_plan alt="0.5" ground_alt="0" lat0="51.990634" lon0="4.376771" max_dist_from_home="15" name="bluetooth_avoid_drone" security_height="0.1">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="1.0"/>
    <waypoint name="STDBY" x="0" y="0"/>
    <waypoint name="TD" x="0" y="0"/>
    <waypoint name="W0" x="0" y="0"/>
    <waypoint name="W1" x="0" y="0"/>
    <waypoint name="VA" x="0" y="0"/>
    <waypoint name="CIRCLE" x="0" y="0" height="0.5"/>
    <!-- waypoint lat="51.990635" lon="4.376836" name="FA1"/>
    <waypoint lat="51.990606" lon="4.376760" name="FA2"/>
    <waypoint lat="51.990652" lon="4.376712" name="FA3"/>
    <waypoint lat="51.990681" lon="4.376791" name="FA4"/ -->

	<waypoint lat="51.990624" lon="4.376867" name="FA1"/>
	<waypoint lat="51.990593" lon="4.376779" name="FA2"/>
	<waypoint lat="51.990646" lon="4.376724" name="FA3"/>
	<waypoint lat="51.990677" lon="4.376812" name="FA4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait Optitrack">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 2)"/>
      <!--<call fun="NavSetAltitudeReferenceHere()"/>-->
      <call fun="NavSetGroundReferenceHere()"/>
      <call fun="markArenaLimsAsWp(WP_FA2)" />
      <call fun="markArenaLimsAsWp(WP_FA1)" />
      <call fun="markArenaLimsAsWp(WP_FA4)" />
      <call fun="markArenaLimsAsWp(WP_FA3)" />
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <set value="stateGetNedToBodyEulers_i()->psi" var="nav_heading"/>
      <attitude pitch="0" roll="0" throttle="0" until="stage_time > 1" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 0.5" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="0.5" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>
    <block name="Vision Nav Init">
      <call fun="avoid_module_post_ahrs_init()" />
    </block>
    <block name="Vision Navigate">
      <call fun="vision_avoid_update_WP(WP_VA)" />
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="landed"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-1.0" until="stage_time > 5" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
